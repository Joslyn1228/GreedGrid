.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(to bottom, #000000, #8B0000, #4B0000);
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF0000;
  text-shadow: 0 0 10rpx rgba(255, 0, 0, 0.5);
}

.calendar-section {
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 0 20rpx rgba(255, 0, 0, 0.3);
}

.date-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 0, 0, 0.5);
}

.date-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 10rpx;
}

.location-text {
  font-size: 32rpx;
  color: #FF0000;
}

.race-details {
  margin-bottom: 40rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.detail-label {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.detail-value {
  font-size: 30rpx;
  color: #CCCCCC;
}

.circuit-info {
  padding-top: 20rpx;
}

.circuit-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF0000;
  margin-bottom: 20rpx;
  display: block;
}

.circuit-details {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.circuit-detail {
  font-size: 28rpx;
  color: #CCCCCC;
  display: block;
}