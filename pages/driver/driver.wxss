.container {
  width: 100%;
  min-height: 100vh;
  background: 
    radial-gradient(circle at 50% 20%, #ff0000 0%, rgba(255, 0, 0, 0.15) 20%, transparent 50%),
    radial-gradient(circle at 80% 80%, #ff0000 0%, rgba(255, 0, 0, 0.1) 20%, transparent 40%),
    linear-gradient(to bottom, #000000 0%, #1a0000 50%, #000000 100%);
  background-blend-mode: overlay, overlay, normal;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
  overflow-x: hidden;
  perspective: 1000px;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    repeating-linear-gradient(45deg, transparent, transparent 10rpx, rgba(255, 0, 0, 0.2) 10rpx, rgba(255, 0, 0, 0.2) 20rpx),
    repeating-linear-gradient(-45deg, transparent, transparent 10rpx, rgba(255, 0, 0, 0.2) 10rpx, rgba(255, 0, 0, 0.2) 20rpx),
    repeating-linear-gradient(90deg, transparent, transparent 100rpx, rgba(255, 0, 0, 0.05) 100rpx, rgba(255, 0, 0, 0.05) 110rpx),
    repeating-linear-gradient(0deg, transparent, transparent 100rpx, rgba(255, 0, 0, 0.05) 100rpx, rgba(255, 0, 0, 0.05) 110rpx);
  background-blend-mode: overlay;
  pointer-events: none;
  z-index: 1;
  animation: gridPulse 3s ease-in-out infinite;
  opacity: 0.8;
}

.container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(255, 0, 0, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(255, 0, 0, 0.1) 0%, transparent 50%),
    linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.9) 100%),
    linear-gradient(45deg, transparent 0%, rgba(255, 0, 0, 0.1) 50%, transparent 100%);
  pointer-events: none;
  z-index: 1;
  animation: scanLine 0.1s linear infinite;
}

/* 将容器内的主要内容元素设置为相对定位并提高z-index */
.header,
.drivers-container {
  position: relative;
  z-index: 2;
}

@keyframes gridPulse {
  0%, 100% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
}

@keyframes scanLine {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 2rpx;
  }
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
}

.title {
  font-size: 60rpx;
  font-weight: 900;
  color: #ffffff;
  background: linear-gradient(45deg, #ff0000, #ff6600, #ffffff, #ff0000);
  background-size: 400% 400%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 
    0 0 20rpx rgba(255, 0, 0, 0.8),
    0 0 40rpx rgba(255, 0, 0, 0.6),
    0 0 60rpx rgba(255, 0, 0, 0.4);
  animation: titleGlow 3s ease-in-out infinite;
  letter-spacing: 8rpx;
  text-transform: uppercase;
}

.drivers-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.driver-item {
  display: flex;
  align-items: center;
  background: 
    linear-gradient(135deg, rgba(255, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.5) 100%),
    radial-gradient(circle at 10% 50%, rgba(255, 0, 0, 0.15) 0%, transparent 70%);
  border: 2rpx solid rgba(255, 0, 0, 0.7);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 
    0 0 25rpx rgba(255, 0, 0, 0.4),
    inset 0 0 10rpx rgba(255, 0, 0, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.driver-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.15), transparent);
  transition: left 0.5s ease;
}

.driver-item:active {
  transform: scale(0.99);
  box-shadow: 
    0 0 35rpx rgba(255, 0, 0, 0.6),
    inset 0 0 15rpx rgba(255, 0, 0, 0.3);
}

.driver-item:active::before {
  left: 100%;
}

@keyframes titleGlow {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

.driver-photo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 3rpx solid rgba(255, 0, 0, 0.9);
  box-shadow: 0 0 20rpx rgba(255, 0, 0, 0.6);
  transition: transform 0.3s ease;
  position: relative;
  overflow: hidden;
}

.driver-item:active .driver-photo {
  transform: scale(1.05);
}

.driver-photo::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  pointer-events: none;
}

.driver-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.driver-number {
  font-size: 36rpx;
  font-weight: 900;
  color: #FF0000;
  margin-bottom: 5rpx;
  display: block;
  text-shadow: 0 0 10rpx rgba(255, 0, 0, 0.8);
}

.driver-name {
  font-size: 42rpx;
  font-weight: 900;
  color: #FFFFFF;
  margin-bottom: 5rpx;
  display: block;
  text-shadow: 0 0 15rpx rgba(255, 0, 0, 0.6);
}

.driver-team {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  font-style: italic;
}

.pick-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  position: relative;
  z-index: 1;
}

.heart-icon {
  cursor: pointer;
  padding: 10rpx;
  transition: transform 0.2s;
}

.heart-icon:active {
  transform: scale(1.2);
}

.heart-emoji {
  font-size: 72rpx;
  transition: all 0.3s ease;
  filter: drop-shadow(0 0 5rpx rgba(255, 0, 0, 0.5));
}

.heart-emoji.selected {
  color: #FF0000;
  filter: drop-shadow(0 0 15rpx rgba(255, 0, 0, 1));
  animation: heartBeat 0.5s ease-in-out;
}

.pick-count {
  font-size: 36rpx;
  font-weight: 900;
  color: #FFFFFF;
  background: linear-gradient(135deg, rgba(255, 0, 0, 0.5) 0%, rgba(255, 0, 0, 0.2) 100%);
  padding: 8rpx 20rpx;
  border-radius: 25rpx;
  min-width: 70rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 0, 0, 0.6);
  box-shadow: 0 0 15rpx rgba(255, 0, 0, 0.4);
}

@keyframes heartBeat {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.3);
  }
  100% {
    transform: scale(1);
  }
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .container {
    padding: 20rpx;
  }
  
  .title {
    font-size: 48rpx;
    letter-spacing: 5rpx;
  }
  
  .driver-item {
    padding: 20rpx;
    gap: 10rpx;
  }
  
  .driver-photo {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
  }
  
  .driver-number {
    font-size: 30rpx;
  }
  
  .driver-name {
    font-size: 34rpx;
  }
  
  .driver-team {
    font-size: 24rpx;
  }
  
  .heart-emoji {
    font-size: 56rpx;
  }
  
  .pick-count {
    font-size: 28rpx;
    padding: 5rpx 15rpx;
    min-width: 50rpx;
  }
}

/* 弹出卡片样式 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 50% 50%, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.6) 100%),
    repeating-linear-gradient(45deg, transparent, transparent 10rpx, rgba(255, 0, 0, 0.1) 10rpx, rgba(255, 0, 0, 0.1) 20rpx);
  display: flex;
  justify-content: center;
  align-items: flex-start;
  z-index: 9999;
  backdrop-filter: blur(5rpx);
  animation: fadeIn 0.5s ease-out;
  pointer-events: auto;
  transition: all 0.3s ease;
  padding-top: 80rpx;
}

.popup-content {
  width: 85%;
  max-width: 600rpx;
  background: 
    linear-gradient(135deg, rgba(255, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.8) 100%),
    radial-gradient(circle at 50% 50%, rgba(255, 0, 0, 0.2) 0%, transparent 70%);
  border: 3rpx solid rgba(255, 0, 0, 0.9);
  border-radius: 25rpx;
  padding: 40rpx 30rpx;
  box-shadow: 
    0 0 40rpx rgba(255, 0, 0, 0.6),
    inset 0 0 20rpx rgba(255, 0, 0, 0.2);
  animation: slideDown 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards, pulse 2s ease-in-out 0.5s 2;
  position: relative;
  overflow: hidden;
  transform-origin: center;
  max-height: 80vh;
  overflow-y: auto;
}

.popup-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  pointer-events: none;
  transition: left 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideDown {
  0% {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.8) rotateX(10deg);
  }
  70% {
    opacity: 0.9;
    transform: translateY(10rpx) scale(1.05);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1) rotateX(0deg);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 
      0 0 40rpx rgba(255, 0, 0, 0.6),
      inset 0 0 20rpx rgba(255, 0, 0, 0.2);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 
      0 0 60rpx rgba(255, 0, 0, 0.8),
      inset 0 0 25rpx rgba(255, 0, 0, 0.3);
  }
}

.popup-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.popup-photo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #FF0000;
}

.popup-info {
  flex: 1;
}

.popup-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF0000;
  display: block;
}

.popup-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin: 5rpx 0;
}

.popup-team {
  font-size: 28rpx;
  color: #CCCCCC;
  display: block;
}

.close-btn {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 50rpx;
  color: #FFFFFF;
  cursor: pointer;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 0, 0, 0.5);
}

.popup-body {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.message-input-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-input {
  width: 100%;
  height: 150rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border: 2rpx solid #FF0000;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  color: #FFFFFF;
  font-size: 28rpx;
  resize: none;
}

.submit-btn {
  background-color: #FF0000;
  color: #FFFFFF;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  cursor: pointer;
}

.submit-btn:active {
  background-color: #CC0000;
}

.message-list-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.toggle-btn {
  background-color: rgba(255, 0, 0, 0.3);
  color: #FFFFFF;
  border: 2rpx solid #FF0000;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  cursor: pointer;
}

.toggle-btn:active {
  background-color: rgba(255, 0, 0, 0.5);
}

.message-list {
  max-height: 300rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.message-item {
  background-color: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 0, 0, 0.3);
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.message-content {
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 1.5;
}

.message-date {
  font-size: 22rpx;
  color: #888888;
  align-self: flex-end;
}

.no-messages {
  text-align: center;
  padding: 40rpx;
  color: #888888;
  font-size: 28rpx;
}

/* 剩余pick次数卡片样式 */
.remaining-picks-card {
  position: absolute;
  top: 0;
  right: 0;
  background: 
    linear-gradient(135deg, rgba(255, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.6) 100%),
    radial-gradient(circle at 10% 50%, rgba(255, 0, 0, 0.3) 0%, transparent 70%);
  border: 2rpx solid rgba(255, 0, 0, 0.9);
  border-radius: 15rpx;
  padding: 15rpx 20rpx;
  box-shadow: 
    0 0 20rpx rgba(255, 0, 0, 0.6),
    inset 0 0 10rpx rgba(255, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
  animation: pulse 2s ease-in-out infinite;
}

.remaining-picks-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: bold;
  text-shadow: 0 0 10rpx rgba(255, 0, 0, 0.8);
}

.remaining-picks-count {
  font-size: 48rpx;
  font-weight: 900;
  color: #FF0000;
  text-shadow: 
    0 0 15rpx rgba(255, 0, 0, 1),
    0 0 30rpx rgba(255, 0, 0, 0.8),
    0 0 45rpx rgba(255, 0, 0, 0.6);
  animation: glow 1.5s ease-in-out infinite alternate;
}

@keyframes glow {
  from {
    text-shadow: 
      0 0 15rpx rgba(255, 0, 0, 1),
      0 0 30rpx rgba(255, 0, 0, 0.8),
      0 0 45rpx rgba(255, 0, 0, 0.6);
  }
  to {
    text-shadow: 
      0 0 20rpx rgba(255, 0, 0, 1),
      0 0 40rpx rgba(255, 0, 0, 1),
      0 0 60rpx rgba(255, 0, 0, 0.8);
  }
}