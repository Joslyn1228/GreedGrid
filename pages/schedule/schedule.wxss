.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(to bottom, #000000, #8B0000, #4B0000);
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #FF0000;
  text-shadow: 0 0 10rpx rgba(255, 0, 0, 0.5);
}

.schedule-container {
  height: calc(100vh - 200rpx);
}

.race-item {
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 20rpx rgba(255, 0, 0, 0.3);
  transition: all 0.3s;
}

.race-item:active {
  transform: scale(0.98);
}

.race-round {
  width: 60rpx;
  height: 60rpx;
  background-color: #FF0000;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin-right: 20rpx;
}

.race-info {
  flex: 1;
}

.race-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 5rpx;
  display: block;
}

.race-date {
  font-size: 28rpx;
  color: #FF0000;
  margin-bottom: 5rpx;
  display: block;
}

.race-location {
  font-size: 24rpx;
  color: #CCCCCC;
  display: block;
}

.race-arrow {
  width: 40rpx;
  height: 40rpx;
  color: #FF0000;
  font-size: 40rpx;
  font-weight: bold;
}