.container {
  width: 100%;
  min-height: 100vh;
  background: 
    radial-gradient(circle at 50% 20%, #ff0000 0%, rgba(255, 0, 0, 0.15) 20%, transparent 50%),
    radial-gradient(circle at 80% 80%, #ff0000 0%, rgba(255, 0, 0, 0.1) 20%, transparent 40%),
    linear-gradient(to bottom, #000000 0%, #1a0000 50%, #000000 100%);
  background-blend-mode: overlay, overlay, normal;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
  overflow-x: hidden;
  position: relative;
  perspective: 1000px;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    repeating-linear-gradient(45deg, transparent, transparent 10rpx, rgba(255, 0, 0, 0.2) 10rpx, rgba(255, 0, 0, 0.2) 20rpx),
    repeating-linear-gradient(-45deg, transparent, transparent 10rpx, rgba(255, 0, 0, 0.2) 10rpx, rgba(255, 0, 0, 0.2) 20rpx),
    repeating-linear-gradient(90deg, transparent, transparent 100rpx, rgba(255, 0, 0, 0.05) 100rpx, rgba(255, 0, 0, 0.05) 110rpx),
    repeating-linear-gradient(0deg, transparent, transparent 100rpx, rgba(255, 0, 0, 0.05) 100rpx, rgba(255, 0, 0, 0.05) 110rpx);
  background-blend-mode: overlay;
  pointer-events: none;
  z-index: 1;
  animation: gridPulse 3s ease-in-out infinite;
  opacity: 0.8;
}

.container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(255, 0, 0, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(255, 0, 0, 0.1) 0%, transparent 50%),
    linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.9) 100%),
    linear-gradient(45deg, transparent 0%, rgba(255, 0, 0, 0.1) 50%, transparent 100%);
  pointer-events: none;
  z-index: 1;
  animation: scanLine 0.1s linear infinite;
}

@keyframes scanLine {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 2rpx;
  }
}

/* 将容器内的主要内容元素设置为相对定位并提高z-index */
.logo,
.countdown-container,
.function-buttons,
.bottom-button {
  position: relative;
  z-index: 2;
}

@keyframes gridPulse {
  0%, 100% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
}

/* Logo */
.logo {
  text-align: center;
  margin: 40rpx 0 60rpx;
  position: relative;
  transform-style: preserve-3d;
}

.logo::before {
  content: 'GreedGrid';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%) translateY(10rpx) translateZ(-10rpx) scale(0.95);
  font-size: 72rpx;
  font-weight: 900;
  font-style: italic;
  color: rgba(255, 0, 0, 0.5);
  text-shadow: 
    0 0 20rpx rgba(255, 0, 0, 0.8),
    0 0 40rpx rgba(255, 0, 0, 0.6),
    0 0 60rpx rgba(255, 0, 0, 0.4);
  animation: logoGlow 3s ease-in-out infinite;
  letter-spacing: 5rpx;
  z-index: -1;
}

.logo text {
  font-size: 72rpx;
  font-weight: 900;
  font-style: italic;
  color: #ffffff;
  background: linear-gradient(45deg, #ff0000, #ff3300, #ff6600, #ffffff, #ff6600, #ff3300, #ff0000);
  background-size: 600% 600%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 
    0 0 10rpx rgba(255, 255, 255, 0.8),
    0 0 20rpx rgba(255, 0, 0, 0.8),
    0 0 30rpx rgba(255, 0, 0, 0.6),
    0 0 50rpx rgba(255, 0, 0, 0.4),
    0 0 80rpx rgba(255, 0, 0, 0.2);
  animation: logoGlow 2s ease-in-out infinite, titleFloat 4s ease-in-out infinite;
  letter-spacing: 5rpx;
  display: inline-block;
  transform-style: preserve-3d;
}

/* 倒计时模块 */
.countdown-container {
  background: 
    linear-gradient(135deg, rgba(255, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.7) 100%),
    radial-gradient(circle at 50% 50%, rgba(255, 0, 0, 0.3) 0%, transparent 70%),
    repeating-linear-gradient(45deg, rgba(255, 0, 0, 0.1) 0%, transparent 10rpx, rgba(255, 0, 0, 0.1) 20rpx);
  border: 3rpx solid rgba(255, 0, 0, 0.9);
  border-radius: 25rpx;
  padding: 50rpx;
  margin-bottom: 70rpx;
  text-align: center;
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 0 50rpx rgba(255, 0, 0, 0.6),
    inset 0 0 30rpx rgba(255, 0, 0, 0.3),
    0 0 100rpx rgba(255, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
  transform-style: preserve-3d;
  transform: rotateX(5deg);
  animation: countdownPulse 2s ease-in-out infinite alternate;
}

.countdown-container::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transform: rotate(45deg);
  animation: countdownShine 2s linear infinite;
}

.countdown-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: repeating-linear-gradient(0deg, transparent, transparent 2rpx, rgba(255, 0, 0, 0.1) 2rpx, rgba(255, 0, 0, 0.1) 4rpx);
  pointer-events: none;
  z-index: 1;
}

.countdown-title {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.98);
  margin-bottom: 20rpx;
  display: block;
  font-weight: bold;
  text-shadow: 
    0 0 15rpx rgba(255, 0, 0, 0.7),
    0 0 30rpx rgba(255, 0, 0, 0.5);
  animation: textGlow 1.5s ease-in-out infinite;
}

.countdown-time {
  font-size: 64rpx;
  font-weight: 900;
  color: #ffffff;
  margin-bottom: 20rpx;
  display: block;
  text-shadow: 
    0 0 25rpx rgba(255, 255, 255, 0.8),
    0 0 50rpx rgba(255, 0, 0, 0.8),
    0 0 100rpx rgba(255, 0, 0, 0.6);
  letter-spacing: 8rpx;
  position: relative;
  z-index: 2;
  animation: timeGlow 1s ease-in-out infinite alternate;
  font-family: 'Courier New', monospace;
}

.countdown-date {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  font-style: italic;
  text-shadow: 
    0 0 10rpx rgba(255, 0, 0, 0.5),
    0 0 20rpx rgba(255, 0, 0, 0.3);
  position: relative;
  z-index: 2;
  animation: dateGlow 2s ease-in-out infinite;
}

@keyframes countdownPulse {
  0% {
    transform: rotateX(5deg) scale(1);
    box-shadow: 
      0 0 50rpx rgba(255, 0, 0, 0.6),
      inset 0 0 30rpx rgba(255, 0, 0, 0.3),
      0 0 100rpx rgba(255, 0, 0, 0.2);
  }
  100% {
    transform: rotateX(5deg) scale(1.02);
    box-shadow: 
      0 0 80rpx rgba(255, 0, 0, 0.8),
      inset 0 0 40rpx rgba(255, 0, 0, 0.5),
      0 0 150rpx rgba(255, 0, 0, 0.4);
  }
}

@keyframes textGlow {
  0%, 100% {
    text-shadow: 
      0 0 15rpx rgba(255, 0, 0, 0.7),
      0 0 30rpx rgba(255, 0, 0, 0.5);
  }
  50% {
    text-shadow: 
      0 0 25rpx rgba(255, 0, 0, 0.9),
      0 0 50rpx rgba(255, 0, 0, 0.7);
  }
}

@keyframes timeGlow {
  0% {
    text-shadow: 
      0 0 25rpx rgba(255, 255, 255, 0.8),
      0 0 50rpx rgba(255, 0, 0, 0.8),
      0 0 100rpx rgba(255, 0, 0, 0.6);
  }
  100% {
    text-shadow: 
      0 0 35rpx rgba(255, 255, 255, 1),
      0 0 70rpx rgba(255, 0, 0, 1),
      0 0 150rpx rgba(255, 0, 0, 0.8),
      0 0 200rpx rgba(255, 0, 0, 0.5);
  }
}

@keyframes dateGlow {
  0%, 100% {
    text-shadow: 
      0 0 10rpx rgba(255, 0, 0, 0.5),
      0 0 20rpx rgba(255, 0, 0, 0.3);
  }
  50% {
    text-shadow: 
      0 0 20rpx rgba(255, 0, 0, 0.7),
      0 0 40rpx rgba(255, 0, 0, 0.5);
  }
}

@keyframes logoGlow {
  0%, 100% {
    background-position: 0% 50%;
  }
  25% {
    background-position: 50% 25%;
  }
  50% {
    background-position: 100% 50%;
  }
  75% {
    background-position: 50% 75%;
  }
}

@keyframes countdownShine {
  0% {
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

@keyframes titleFloat {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  25% {
    transform: translateY(-10rpx) scale(1.02);
  }
  50% {
    transform: translateY(0) scale(1);
  }
  75% {
    transform: translateY(10rpx) scale(0.98);
  }
}

/* 功能按钮区 */
.function-buttons {
  display: flex;
  flex-direction: column;
  gap: 35rpx;
  margin-bottom: 80rpx;
}

.function-button {
  background: 
    linear-gradient(135deg, rgba(255, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.8) 100%),
    radial-gradient(circle at 10% 50%, rgba(255, 0, 0, 0.4) 0%, transparent 70%),
    repeating-linear-gradient(45deg, rgba(255, 0, 0, 0.1) 0%, transparent 15rpx, rgba(255, 0, 0, 0.1) 30rpx);
  border: 3rpx solid rgba(255, 0, 0, 0.9);
  border-radius: 20rpx;
  padding: 45rpx 35rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 0 30rpx rgba(255, 0, 0, 0.6),
    inset 0 0 15rpx rgba(255, 0, 0, 0.3),
    0 0 80rpx rgba(255, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
  transform-style: preserve-3d;
  transform: perspective(500px) rotateY(2deg);
  animation: buttonFloat 3s ease-in-out infinite;
}

.function-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.3s ease;
}

.function-button::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: repeating-linear-gradient(0deg, transparent, transparent 3rpx, rgba(255, 0, 0, 0.1) 3rpx, rgba(255, 0, 0, 0.1) 6rpx);
  pointer-events: none;
  z-index: 1;
}

.function-button:active {
  transform: translateX(15rpx) perspective(500px) rotateY(-2deg);
  background: 
    linear-gradient(135deg, rgba(255, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.9) 100%),
    radial-gradient(circle at 10% 50%, rgba(255, 0, 0, 0.6) 0%, transparent 70%),
    repeating-linear-gradient(45deg, rgba(255, 0, 0, 0.2) 0%, transparent 15rpx, rgba(255, 0, 0, 0.2) 30rpx);
  box-shadow: 
    0 0 50rpx rgba(255, 0, 0, 0.9),
    inset 0 0 25rpx rgba(255, 0, 0, 0.5),
    0 0 120rpx rgba(255, 0, 0, 0.4);
}

.function-button:active::before {
  left: 100%;
}

.button-content {
  display: flex;
  align-items: center;
  gap: 30rpx;
  position: relative;
  z-index: 2;
}

.button-icon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: 
    linear-gradient(135deg, rgba(255, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.8) 100%),
    radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.4) 0%, transparent 70%);
  padding: 20rpx;
  box-sizing: border-box;
  border: 3rpx solid rgba(255, 0, 0, 0.9);
  box-shadow: 
    0 0 20rpx rgba(255, 0, 0, 0.8),
    0 0 40rpx rgba(255, 0, 0, 0.5);
  transition: all 0.3s ease;
  animation: iconPulse 2s ease-in-out infinite;
  text-align: center;
  line-height: 70rpx;
  font-size: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.function-button:active .button-icon {
  transform: scale(1.2) rotate(10deg);
  box-shadow: 
    0 0 30rpx rgba(255, 255, 255, 0.9),
    0 0 60rpx rgba(255, 0, 0, 1),
    0 0 90rpx rgba(255, 0, 0, 0.7);
}

.button-text {
  font-size: 38rpx;
  font-weight: 900;
  color: #ffffff;
  text-shadow: 
    0 0 15rpx rgba(255, 255, 255, 0.9),
    0 0 30rpx rgba(255, 0, 0, 0.9),
    0 0 60rpx rgba(255, 0, 0, 0.6);
  letter-spacing: 3rpx;
  animation: buttonTextGlow 2s ease-in-out infinite;
}

.button-arrow {
  font-size: 52rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: bold;
  text-shadow: 
    0 0 20rpx rgba(255, 0, 0, 1),
    0 0 40rpx rgba(255, 0, 0, 0.8);
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
  animation: arrowGlow 1.5s ease-in-out infinite alternate;
}

.function-button:active .button-arrow {
  transform: translateX(15rpx) scale(1.2);
  text-shadow: 
    0 0 30rpx rgba(255, 255, 255, 1),
    0 0 60rpx rgba(255, 0, 0, 1),
    0 0 90rpx rgba(255, 0, 0, 0.8);
}

@keyframes buttonFloat {
  0%, 100% {
    transform: perspective(500px) rotateY(2deg) translateY(0);
  }
  50% {
    transform: perspective(500px) rotateY(2deg) translateY(-5rpx);
  }
}

@keyframes iconPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 
      0 0 20rpx rgba(255, 0, 0, 0.8),
      0 0 40rpx rgba(255, 0, 0, 0.5);
  }
