  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 购票预算弹窗样式 */
.ticket-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.ticket-modal {
  background: 
    linear-gradient(135deg, rgba(255, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.95) 50%, rgba(255, 0, 0, 0.6) 100%),
    radial-gradient(circle at 50% 50%, rgba(255, 0, 0, 0.5) 0%, transparent 70%),
    repeating-linear-gradient(45deg, rgba(255, 0, 0, 0.2) 0%, transparent 20rpx, rgba(255, 0, 0, 0.2) 40rpx);
  border: 3rpx solid rgba(255, 0, 0, 0.95);
  border-radius: 25rpx;
  width: 80%;
  max-width: 600rpx;
  padding: 0;
  box-shadow: 
    0 0 60rpx rgba(255, 0, 0, 0.9),
    0 0 120rpx rgba(255, 0, 0, 0.6),
    inset 0 0 40rpx rgba(255, 0, 0, 0.3),
    0 0 180rpx rgba(255, 0, 0, 0.4);
  animation: slideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1) forwards, modalFloat 3s ease-in-out infinite;
  transform-style: preserve-3d;
  perspective: 1000px;
  transform: perspective(500px) rotateY(2deg);
  position: relative;
  overflow: hidden;
}

.ticket-modal::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.3s ease;
}

.ticket-modal::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: repeating-linear-gradient(0deg, transparent, transparent 3rpx, rgba(255, 0, 0, 0.15) 3rpx, rgba(255, 0, 0, 0.15) 6rpx);
  pointer-events: none;
  z-index: 1;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx) scale(0.8) rotateX(10deg);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1) rotateX(0deg) perspective(500px) rotateY(2deg);
  }
}

@keyframes modalFloat {
  0%, 100% {
    transform: perspective(500px) rotateY(2deg) translateY(0);
  }
  50% {
    transform: perspective(500px) rotateY(2deg) translateY(-10rpx);
  }
}

@keyframes inputGlow {
  0% {
    box-shadow: 
      0 0 50rpx rgba(255, 0, 0, 0.8),
      inset 0 0 25rpx rgba(255, 0, 0, 0.5),
      0 0 100rpx rgba(255, 0, 0, 0.4);
  }
  100% {
    box-shadow: 
      0 0 70rpx rgba(255, 0, 0, 1),
      inset 0 0 35rpx rgba(255, 0, 0, 0.7),
      0 0 150rpx rgba(255, 0, 0, 0.6);
  }
}

