}

@keyframes buttonTextGlow {
  0%, 100% {
    text-shadow: 
      0 0 15rpx rgba(255, 255, 255, 0.9),
      0 0 30rpx rgba(255, 0, 0, 0.9),
      0 0 60rpx rgba(255, 0, 0, 0.6);
  }
  50% {
    text-shadow: 
      0 0 25rpx rgba(255, 255, 255, 1),
      0 0 50rpx rgba(255, 0, 0, 1),
      0 0 100rpx rgba(255, 0, 0, 0.8);
  }
}

@keyframes arrowGlow {
  0% {
    text-shadow: 
      0 0 20rpx rgba(255, 0, 0, 1),
      0 0 40rpx rgba(255, 0, 0, 0.8);
  }
  100% {
