<view class="container">
  <!-- Logo -->
  <view class="logo">
    <text>GreedGrid</text>
  </view>
  
  <!-- 倒计时模块 -->
  <view class="countdown-container">
    <text class="countdown-title">距离澳大利亚大奖赛</text>
    <text class="countdown-time">{{countdownDays}}天{{countdownHours}}时{{countdownMinutes}}分</text>
    <text class="countdown-date">2026-03-06 09:30(北京时间)</text>
  </view>
  
  <!-- 功能按钮区 -->
  <view class="function-buttons">
    <!-- 车队红黑榜 -->
    <view class="function-button" bindtap="navigateToRanking">
      <view class="button-content">
        <image class="button-icon" src="/images/team1.png" mode="aspectFit"></image>
        <text class="button-text">车队红黑榜</text>
      </view>
      <text class="button-arrow">→</text>
    </view>
    
    <!-- PICK UP MY DRIVER -->
    <view class="function-button" bindtap="navigateToDriver">
      <view class="button-content">
        <image class="button-icon" src="/images/driver1.png" mode="aspectFit"></image>
        <text class="button-text">PICK UP MY DRIVER</text>
      </view>
      <text class="button-arrow">→</text>
    </view>
    
    <!-- 2026赛历 -->
    <view class="function-button" bindtap="navigateToSchedule">
      <view class="button-content">
        <image class="button-icon" src="/images/f1_logo.png" mode="aspectFit"></image>
        <text class="button-text">2026赛历</text>
      </view>
      <text class="button-arrow">→</text>
    </view>
  </view>
  
  <!-- 底部按钮 -->
  <view class="bottom-button" bindtap="navigateToTicketSimulator">
    <text class="bottom-button-text">我要去上海之抢票模拟器</text>
  </view>
</view>

<!-- 购票预算弹窗 -->
<view class="ticket-modal-overlay" wx:if="{{showTicketModal}}" bindtap="closeTicketModal">
  <view class="ticket-modal" catchtap>
    <view class="modal-header">
      <text class="modal-title">请输入您的购票预算</text>
    </view>
    <view class="modal-content">
      <input 
        class="budget-input" 
        type="digit" 
        placeholder="请输入数字"
        placeholder-class="input-placeholder"
        bindinput="onBudgetInput"
        value="{{budgetAmount}}"
      />
      <text class="input-hint">只能模拟三日联票</text>

    </view>
    <view class="modal-buttons">
      <view class="modal-button cancel" bindtap="closeTicketModal">
        <text class="button-text">取消</text>
      </view>
      <view class="modal-button confirm" bindtap="confirmBudget">
        <text class="button-text">确认</text>
      </view>
    </view>
  </view>
</view>

<!-- 抢票结果弹窗 -->
<view class="ticket-modal-overlay" wx:if="{{showResultModal}}" bindtap="closeResultModal">
  <view class="ticket-modal result-modal" catchtap>
    <view class="modal-header">
      <text class="modal-title">{{resultTitle}}</text>
    </view>
    <view class="modal-content result-content">
      <text class="result-message">{{resultMessage1}}</text>
      <text class="result-message" wx:if="{{resultMessage2}}">{{resultMessage2}}</text>
      <text class="result-message italic" wx:if="{{resultMessage3}}">{{resultMessage3}}</text>
    </view>
    <view class="modal-buttons">
      <view class="modal-button confirm full-width" bindtap="closeResultModal">
        <text class="button-text">确定</text>
      </view>
    </view>
  </view>
</view>