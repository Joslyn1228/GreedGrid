.container {
  width: 100%;
  min-height: 100vh;
  background: 
    radial-gradient(circle at 50% 20%, #ff0000 0%, rgba(255, 0, 0, 0.15) 20%, transparent 50%),
    radial-gradient(circle at 80% 80%, #ff0000 0%, rgba(255, 0, 0, 0.1) 20%, transparent 40%),
    linear-gradient(to bottom, #000000 0%, #1a0000 50%, #000000 100%);
  background-blend-mode: overlay, overlay, normal;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  perspective: 1000px;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: repeating-linear-gradient(
    to bottom,
    rgba(255, 0, 0, 0.05),
    rgba(255, 0, 0, 0.05) 1px,
    transparent 1px,
    transparent 20px
  );
  animation: gridPulse 3s ease-in-out infinite;
  z-index: 1;
}

.container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(0, 0, 0, 0.3) 50%,
    transparent 100%
  );
  background-size: 100% 4px;
  animation: scanLine 0.1s linear infinite;
  z-index: 2;
}

