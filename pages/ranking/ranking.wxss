  border: 1rpx solid rgba(255, 0, 0, 0.5);
  position: relative;
  z-index: 10;
  transition: all 0.3s ease;
}

.team-item:active {
  transform: scale(0.98);
  box-shadow: 
    0 2rpx 10rpx rgba(255, 0, 0, 0.5),
    inset 0 0 20rpx rgba(255, 0, 0, 0.1);
}

.team-rank {
  width: 70rpx;
  height: 70rpx;
  background-color: #ff0000;
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin-right: 30rpx;
  box-shadow: 
    0 0 10rpx rgba(255, 0, 0, 0.8),
    0 0 20rpx rgba(255, 0, 0, 0.5),
    inset 0 0 10rpx rgba(255, 255, 255, 0.3);
  text-shadow: 0 0 5rpx rgba(255, 255, 255, 0.8);
}

.team-logo {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  box-shadow: 
    0 0 15rpx rgba(255, 0, 0, 0.5),
    0 0 30rpx rgba(255, 0, 0, 0.2);
  filter: drop-shadow(0 0 5rpx rgba(255, 0, 0, 0.8));
}

.team-info {
  flex: 1;
}

.team-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
}

.team-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  z-index: 100;
  position: relative;
}

.like-btn, .dislike-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  border-radius: 10rpx;
  transition: all 0.3s ease;
  /* 移除按钮浮动动画，避免页面抖动 */
