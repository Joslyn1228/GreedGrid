.like-btn:active, .dislike-btn:active {
  transform: scale(0.95);
}

.like-btn {
  color: #ff0000;
}

.dislike-btn {
  color: #e74c3c;
}

.btn-text {
  font-size: 36rpx;
  margin-bottom: 5rpx;
