  flex: 1;
  overflow-y: auto;
}

.team-item {
  background-color: rgba(255, 0, 0, 0.05);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
