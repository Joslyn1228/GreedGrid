@keyframes gridPulse {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.7; }
}

@keyframes scanLine {
  0% { transform: translateY(-100%); }
  100% { transform: translateY(100%); }
}

@keyframes titleFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

@keyframes buttonFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5rpx); }
}

@keyframes iconPulse {
  0%, 100% { 
    transform: scale(1); 
    filter: brightness(1);
  }
  50% { 
    transform: scale(1.1); 
    filter: brightness(1.3);
  }
}

@keyframes countdownPulse {
  0%, 100% { 
    transform: translate(-50%, -50%) scale(1);
    box-shadow: 
      0 20rpx 60rpx rgba(255, 0, 0, 0.4),
      0 0 100rpx rgba(255, 0, 0, 0.2);
  }
  50% { 
    transform: translate(-50%, -50%) scale(1.02);
    box-shadow: 
      0 25rpx 70rpx rgba(255, 0, 0, 0.6),
      0 0 120rpx rgba(255, 0, 0, 0.3);
  }
}

/* 留言弹窗动画 */
@keyframes modalSlideIn {
  0% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.9) translateY(-20rpx);
  }
  80% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.02) translateY(5rpx);
  }
  100% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1) translateY(0);
  }
}

/* 蒙版层动画 */
@keyframes overlayFadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

/* 留言项进入动画 */
@keyframes commentSlideIn {
  0% {
    opacity: 0;
    transform: translateX(-20rpx) translateY(10rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0) translateY(0);
  }
}

/* 无留言提示动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
}

/* 自定义留言弹窗样式 */
.comments-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1002;
  animation: overlayFadeIn 0.3s ease-out;
}

.comments-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(1);
  width: 85%;
  max-height: 70vh;
  background: 
    radial-gradient(circle at top left, rgba(255, 0, 0, 0.3) 0%, transparent 50%),
    radial-gradient(circle at bottom right, rgba(255, 0, 0, 0.2) 0%, transparent 50%),
    linear-gradient(to bottom, rgba(0, 0, 0, 0.98) 0%, rgba(26, 0, 0, 0.98) 100%);
  border-radius: 35rpx;
  box-shadow: 
    0 20rpx 80rpx rgba(255, 0, 0, 0.6),
    0 0 150rpx rgba(255, 0, 0, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(25rpx);
  border: 2rpx solid rgba(255, 0, 0, 0.8);
  z-index: 1003;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

.comments-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 45rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 0, 0, 0.5);
  position: relative;
  background: linear-gradient(to right, rgba(255, 0, 0, 0.1), transparent 50%, rgba(255, 0, 0, 0.1));
}

.comments-modal-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 0 15rpx rgba(255, 0, 0, 1), 0 0 30rpx rgba(255, 0, 0, 0.5);
  letter-spacing: 1rpx;
  font-family: 'Microsoft YaHei', sans-serif;
}

