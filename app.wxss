
/* 全局字体设置 */
body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 32rpx;
  line-height: 1.5;
  color: #FFFFFF;
  background-color: #000000;
}


/* 全局链接样式 */
a {
  color: #FF0000;
  text-decoration: none;
}


/* 全局按钮基础样式 */
button {
  border: none;
  outline: none;
  cursor: pointer;
  font-size: 32rpx;
}

/* 全局图片基础样式 */
image {
  display: block;
}


/* 全局动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 全局工具类 */
